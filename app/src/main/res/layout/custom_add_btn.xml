<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/custom_add_btn_save"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/player_name_dialog_btn_save"
        android:layout_margin="20dp"
        android:background="@drawable/btn_round_rectangle"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/custom_add_btn_cancel"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/player_name_dialog_btn_cancel"
        android:layout_margin="20dp"
        android:background="@drawable/btn_round_rectangle"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:textSize="18sp" />
</LinearLayout>